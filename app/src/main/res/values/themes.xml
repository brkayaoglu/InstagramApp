<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InstagramApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="appBarbackgroundColorCreated">@color/colorPrimary</item>
        <item name="backgroundColorCreated">@color/bgLight</item>
        <item name="textColorCreated">@color/bgDark</item>
        <item name="colorPrimaryDark">@android:color/holo_orange_dark</item>
        <item name="colorPrimaryVariant">@android:color/holo_orange_dark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DarkMode" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="textColorCreated">@color/bgLight</item>
        <item name="backgroundColorCreated">#3E3E3E</item>
        <item name="appBarbackgroundColorCreated">#5A5A5A</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorPrimaryVariant">@color/colorBlack</item>
        <!-- Customize your theme here. -->
    </style>
</resources>